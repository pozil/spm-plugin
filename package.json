{
    "name": "spm-plugin",
    "description": "A Salesforce CLI plugin for interacting with the Salesforce Package Manager (SPM) registry",
    "version": "1.0.0",
    "author": "pozil",
    "dependencies": {
        "@oclif/command": "^1.8.0",
        "@oclif/config": "^1.17.0",
        "@oclif/errors": "^1.3.4",
        "@salesforce/command": "^3.1.0",
        "@salesforce/core": "^2.20.10",
        "tslib": "2.2.0"
    },
    "devDependencies": {
        "@oclif/dev-cli": "^1.26.0",
        "@oclif/plugin-help": "^3.2.2",
        "@oclif/test": "^1.2.8",
        "@salesforce/dev-config": "^2.1.0",
        "@salesforce/ts-sinon": "^1.3.5",
        "@types/chai": "^4.2.17",
        "@types/mocha": "^8.2.2",
        "@types/node": "^15.0.1",
        "chai": "^4.3.4",
        "globby": "^11.0.3",
        "mocha": "^8.3.2",
        "nyc": "^15.1.0",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "tslint": "^6.1.3"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "files": [
        "/lib",
        "/messages",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "homepage": "https://github.com/pozil/spm-plugin",
    "keywords": [
        "sfdx-plugin"
    ],
    "license": "CC0-1.0",
    "oclif": {
        "commands": "./lib/commands",
        "bin": "sfdx",
        "topics": {
            "spm": {
                "description": "Commands to interact with the Salesforce Package Manager (SPM) registry."
            }
        },
        "devPlugins": [
            "@oclif/plugin-help"
        ]
    },
    "bugs": "https://github.com/pozil/spm-plugin/issues",
    "repository": "github:pozil/spm-plugin",
    "scripts": {
        "lint": "tslint --project . --config tslint.json --format stylish",
        "prettier": "prettier --write '**/*.{js,json,md,ts,yaml,yml}'",
        "postpack": "rm -f oclif.manifest.json",
        "posttest": "tslint -p test -t stylish",
        "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
        "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
        "version": "oclif-dev readme && git add README.md"
    }
}
