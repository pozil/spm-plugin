{
    "name": "spm-plugin",
    "description": "A Salesforce CLI plugin for interacting with the Salesforce Package Manager (SPM) registry",
    "version": "0.1.0",
    "author": "pozil",
    "dependencies": {
        "@oclif/command": "^1",
        "@oclif/config": "^1",
        "@oclif/errors": "^1",
        "@salesforce/command": "^2",
        "@salesforce/core": "^2",
        "tslib": "^1"
    },
    "devDependencies": {
        "@oclif/dev-cli": "^1",
        "@oclif/plugin-help": "^2",
        "@oclif/test": "^1",
        "@salesforce/dev-config": "1.4.1",
        "@salesforce/ts-sinon": "^1.3.5",
        "@types/chai": "^4",
        "@types/mocha": "^5",
        "@types/node": "^10",
        "chai": "^4",
        "globby": "^8",
        "mocha": "^5",
        "nyc": "^14",
        "prettier": "^2.2.1",
        "ts-node": "^9",
        "tslint": "^5"
    },
    "engines": {
        "node": ">=14.0.0"
    },
    "files": [
        "/lib",
        "/messages",
        "/npm-shrinkwrap.json",
        "/oclif.manifest.json"
    ],
    "homepage": "https://github.com/pozil/spm-plugin",
    "keywords": [
        "sfdx-plugin"
    ],
    "license": "CC0-1.0",
    "oclif": {
        "commands": "./lib/commands",
        "bin": "sfdx",
        "topics": {
            "spm": {
                "description": "Commands to interact with the Salesforce Package Manager (SPM) registry."
            }
        },
        "devPlugins": [
            "@oclif/plugin-help"
        ]
    },
    "bugs": "https://github.com/pozil/spm-plugin/issues",
    "repository": "github:pozil/spm-plugin",
    "scripts": {
        "lint": "tslint --project . --config tslint.json --format stylish",
        "prettier": "prettier --write '**/*.{js,json,md,ts,yaml,yml}'",
        "postpack": "rm -f oclif.manifest.json",
        "posttest": "tslint -p test -t stylish",
        "prepack": "rm -rf lib && tsc -b && oclif-dev manifest && oclif-dev readme",
        "test": "nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
        "version": "oclif-dev readme && git add README.md"
    }
}
